<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lupa_Password">

    <LinearLayout
        android:id="@+id/LinearAtasLupaPass"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

    </LinearLayout>

    <TextView
        android:id="@+id/textReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET PASSWORD"
        android:textSize="30sp"
        android:fontFamily="@font/lexendbold"
        android:textColor="@color/RedPrimary"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/LinearAtasLupaPass"
        />

    <LinearLayout
        android:id="@+id/linear_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:layout_marginTop="80dp"
        android:layout_below="@id/textReset">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textSize="20sp"
            android:textColor="@color/GreyText"
            android:fontFamily="@font/lexendregular"/>


        <EditText
            android:id="@+id/edit_email_Reset"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/search_border"
            android:height="45dp"
            android:hint="   example@gmail.com"
            android:fontFamily="@font/lexendregular"
            android:textSize="15sp"
            />

        <Button
            android:textColor="@color/white"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:text="Kirim Untuk OTP"
            android:fontFamily="@font/lexendregular"
            android:background="@drawable/button_primary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OTP"
            android:textSize="20sp"
            android:textColor="@color/GreyText"
            android:fontFamily="@font/lexendregular"
            android:layout_marginTop="15dp"/>

        <EditText
            android:layout_marginTop="5dp"
            android:id="@+id/edit_otp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/search_border"
            android:height="45dp"
            android:hint="  OTP"
            android:fontFamily="@font/lexendregular"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/RegisterTextReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password Baru"
            android:textSize="20sp"
            android:textColor="@color/GreyText"
            android:fontFamily="@font/lexendregular"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/Edit_Password_Reset"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/search_border"
            android:height="45dp"
            android:hint="  Password"
            android:fontFamily="@font/lexendregular"
            android:textSize="15sp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/text_disini_reset"
        android:layout_below="@id/linear_reset"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sudah punya akun? masuk disini"
        android:fontFamily="@font/lexendregular"
        android:textColor="@color/GreyText"/>

    <Button
        android:id="@+id/btn_Reset_Pass"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_disini_reset"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_primary"
        android:text="Reset"
        android:textColor="@color/white"
        android:fontFamily="@font/lexendsemibold"
        android:textSize="20sp"/>
</RelativeLayout>